<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DetailActivity">

    <TextView
            android:id="@+id/productName"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="257dp"
            android:layout_marginRight="257dp"
            android:layout_toStartOf="@+id/productPrice"
            android:layout_toLeftOf="@+id/productPrice"
            android:text="Item Name"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:text="$"
            android:textAllCaps="true"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    <ImageView
            android:id="@+id/imageView_2"
            android:layout_width="257dp"
            android:layout_height="143dp"
            android:layout_below="@+id/productName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-44dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/image1" />


    <TextView
            android:id="@+id/productDescription"
            android:layout_width="576dp"
            android:layout_height="125dp"
            android:layout_below="@+id/imageView_2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:text="Longer description"
            tools:ignore="HardcodedText" />


    <TextView
            android:id="@+id/cruiseSpeedWords"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView_2"
            android:layout_alignLeft="@+id/imageView_2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="293dp"
            android:layout_marginLeft="173dp"
            android:layout_marginBottom="255dp"
            android:ems="10"
            android:text="Cruise Speed" />

    <TextView
            android:id="@+id/producttopSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="228dp"
            android:text="Number" />






    <TextView
            android:id="@+id/guestsWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="200dp"
            android:ems="10"
            android:text="Guests" />

    <TextView
            android:id="@+id/productGuestsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginBottom="173dp"
            android:text="Number" />






    <TextView
            android:id="@+id/productCruiseSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="228dp"
            android:text="Cruise Speed" />

    <TextView
            android:id="@+id/topSpeedWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginBottom="255dp"
            android:ems="10"
            android:text="Top Speed" />







    <TextView
            android:id="@+id/crewWords"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="200dp"
            android:ems="10"
            android:text="Crew" />

    <TextView
            android:id="@+id/productCrewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginBottom="173dp"
            android:text="Number" />



</RelativeLayout>